{
	"name": "@apps/create-playground-app",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"bin": {
		"test-create-playground-app": "./dist/bin/app.cjs"
	},
	"scripts": {
		"------------------------INSTALLATION-------------------": "",
		"prepare": "",
		"pre": "git add . && npx lint-staged",
		"link-cli": "pnpm link --global",
		"------------------------UTILS--------------------------": "",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "pnpm prettier . --write && pnpm prettier . --check",
		"------------------------BUILDS-------------------------": "",
		"build:dev": "pnpm tsdown --config ./config/tsdownrc/tsdown.dev.ts",
		"build:prod": "pnpm tsdown --config ./config/tsdownrc/tsdown.prod.ts",
		"build:npm": "pnpm npm:prepack && pnpm tsdown --config ./config/tsdownrc/tsdown.prod.ts && pnpm npm:postpack",
		"------------------------DEPLOYS------------------------": "",
		"npm:prepack": "clean-package",
		"npm:postpack": "clean-package restore",
		"------------------------TESTS--------------------------": "",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"------------------------NPM--------------------------": "",
		"prepublishOnly": "pnpm build:npm"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"@myutilia/env": "^0.1.2",
		"c12": "^3.3.2",
		"commander": "^14.0.1",
		"magic-regexp": "^0.10.0",
		"oh-my-error": "^2.0.2",
		"typia": "^10.1.0",
		"@packages/create-own-cli": "workspace:*"
	},
	"devDependencies": {
		"@configs/vitest": "workspace:*",
		"@ineedj/eslintrc": "1.2.3",
		"@ineedj/prettierrc": "3.0.0",
		"@ineedj/tsconfig": "^1.0.0",
		"@ryoppippi/unplugin-typia": "^2.6.5",
		"@types/mock-fs": "^4.13.4",
		"@types/node": "^24.7.2",
		"@vitest/coverage-v8": "^3.2.4",
		"clean-package": "^2.2.0",
		"eslint": "^8.57.1",
		"mock-fs": "^5.5.0",
		"prettier": "^3.4.2",
		"rollup-plugin-copy": "^3.5.0",
		"ts-patch": "^3.3.0",
		"tsdown": "^0.15.6",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"publishConfig": {
		"access": "public",
		"directory": "dist",
		"provenance": true,
		"tag": "latest"
	}
}
